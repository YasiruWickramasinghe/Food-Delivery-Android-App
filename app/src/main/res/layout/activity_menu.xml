<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="@drawable/interface1">
    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
android:layout_marginStart="5dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        >

        <Button
            android:id="@+id/search_bar"
            android:layout_width="290dp"
            android:layout_height="wrap_content"


            android:background="@drawable/button3"
            android:text="Search Here"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/go_to_cart2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/search_bar"
            android:layout_toRightOf="@+id/search_bar"
            android:background="@drawable/button3"
            android:text="Go To Cart"
            android:textColor="@color/white" />

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/recycle_menu"
        android:layout_below="@+id/layout_1"></androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>